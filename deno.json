{
  "tasks": {
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "typescript": "npm:typescript@^5.0.0"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    },
    "exclude": [
      "node_modules/",
      "dist/"
    ]
  }
}
